{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build All",
            "type": "shell",
            "command": "mpiCC -g -Wall mpiRender.cpp image.cpp -o mpiRender",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "mpiexec -n 4 ./mpiRender",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}